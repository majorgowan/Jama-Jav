<?xml version="1.0" ?>
<project default="main">

    <target name="main" depends="compile, jar">
        <echo>
            Building the jar file.
        </echo>
    </target>

    <target name="compile">
        <echo>
            Compiling!!! 
        </echo>
        <javac srcdir="./jamajav"/>
    </target>

    <target name="jar" depends="compile">
        <echo>
            Making a jar.
        </echo>
        <jar jarfile="JamaJav.jar" basedir="." includes="jamajav/*.class">
            <manifest>
                <attribute name="Main-Class" value="jamajav.JamaJav"/>
            </manifest>
        </jar>
    </target>

    <target name="zip" depends="compile, jar">
        <echo>
            Making a zip.
        </echo>
        <zip destfile="JamaJav.zip">
            <zipfileset dir="." prefix="MajMidMak/"
                includes="JamaJav.jar,*.jar,jjav.bat,jjav.unx" />
        </zip>
    </target>

    <target name="clean">
        <delete>
            <fileset dir="." includes="jamajav/*.class,JamaJav.jar"/>
        </delete> 
    </target>

</project>
